{
  "compilerOptions": {
    /* 类型定义缺失处理：跳过对 express-rate-limit 等缺失声明的库检查 */
    "skipLibCheck": true,
    /* 其余配置保持不变 */
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
